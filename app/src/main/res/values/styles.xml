<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StyledTilEditTextTheme">
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">@color/theme1_one</item>
        <item name="colorControlActivated">@color/theme1_dark2</item>
        <item name="android:textColorPrimary">@color/orange_100</item>
    </style>

    <style name="StyledTilEditText">
        <item name="android:theme">@style/StyledTilEditTextTheme</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textColor">@color/orange_100</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlNormal">@color/orange_700</item>
        <item name="colorControlActivated">@color/theme1_two</item>
        <item name="colorControlHighlight">@color/theme1_dark2</item>
        <item name="boxStrokeColor">@color/orange_700</item>
    </style>
</resources>